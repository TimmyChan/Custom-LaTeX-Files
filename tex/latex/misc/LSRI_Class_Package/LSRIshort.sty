%---Analysis---%
\newcommand\ceil[1]{\left\lceil #1 \right\rceil} 	% ceiling
\newcommand\floor[1]{\left\lfloor #1 \right\rfloor}	% floor
\newcommand\series[1]{\sum_{#1=1}^{\infty}}			% Series 
\newcommand\pseries[1]{\sum_{#1=0}^{\infty}}		% Power Series
% Derivative (Leibniz's notation)
\newcommand\derivative[2]{\frac{\delta}{\delta #2}\left( #1 \right)}
%conjugates for complex numbers
\newcommand{\conj}[1]{\overline{#1}}
% Characteristic function from analysis f(x) = 1 if x in set, 0 if x not in set.
\newcommand{\charac}[1]{\chi\raisebox{-4bp}{\scriptsize$#1$}}
%Complex Log (different from lower case log)
\DeclareMathOperator{\Log}{Log}
 			
%---Topology---%
