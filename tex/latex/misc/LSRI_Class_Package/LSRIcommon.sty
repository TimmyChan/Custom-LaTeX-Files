%---Problem Set (for math homework)---%
\definecolor{myblue}{RGB}{25,0,150}
\newlist{problemset}{enumerate}{1}	% Problemset environment
% Customization of formatting to have calligraphy mark
\setlist[problemset,1]{label=\color{myblue}\ding{49},leftmargin=*,align=left, parsep=0em, topsep=0em,labelindent=0in, itemsep=1em,itemindent=0in}
\newcounter{problem}
\newcommand{\probsep}{\noindent\rule[0.5ex]{\linewidth}{1pt}}
\newcommand{\problem}[1]{\item[\color{myblue}\ding{49} #1:]\hfill \input{"#1".tex}} 

%---Question Set (for math quizzes)---%
\newlist{questionset}{enumerate}{1}
\setlist[questionset,1]{label=\color{myblue}\ding{49} \arabic*.,leftmargin=*,align=left, parsep=0em, topsep=0em,labelindent=0in, itemsep=1em,itemindent=0in}
\newcommand{\question}[1]{\item \input{"#1".tex}}



